-- Logs Script: Auto-Show on Start | Press [L] to Toggle
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TextChatService = game:GetService("TextChatService")
local CoreGui = game:GetService("CoreGui")

-- Ø§Ù„ØªØ£ÙƒØ¯ Ù…Ù† Ø¹Ø¯Ù… ØªÙƒØ±Ø§Ø± Ø§Ù„Ø³ÙƒØ±Ø¨Øª
if CoreGui:FindFirstChild("MyChatLogs") then
    CoreGui:FindFirstChild("MyChatLogs"):Destroy()
end

local sg = Instance.new("ScreenGui")
sg.Name = "MyChatLogs"
sg.Parent = CoreGui
sg.ResetOnSpawn = false

local mainFrame = Instance.new("Frame", sg)
mainFrame.Size = UDim2.new(0, 350, 0, 300)
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 2
mainFrame.Visible = true -- Ø³ÙŠØ¸Ù‡Ø± ÙÙˆØ±Ø§Ù‹ Ù„Ù„ØªØ¬Ø±Ø¨Ø©
mainFrame.Active = true
mainFrame.Draggable = true

local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(1, 0, 0, 35)
title.Text = "ğŸ“œ CHAT LOGS [L to Hide]"
title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20

local scroll = Instance.new("ScrollingFrame", mainFrame)
scroll.Size = UDim2.new(1, -10, 1, -45)
scroll.Position = UDim2.new(0, 5, 0, 40)
scroll.BackgroundTransparency = 1
scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
scroll.ScrollBarThickness = 5

local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0, 2)

local logsCount = 0
local function addLog(name, msg, color)
    logsCount = logsCount + 1
    local label = Instance.new("TextLabel", scroll)
    label.Size = UDim2.new(1, 0, 0, 20)
    label.Text = " [" .. os.date("%X") .. "] " .. name .. ": " .. msg
    label.TextColor3 = color or Color3.fromRGB(255, 255, 255)
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.TextScaled = true
    
    if logsCount > 75 then
        scroll:GetChildren()[2]:Destroy() -- Ø­Ø°Ù Ø£Ù‚Ø¯Ù… Ø±Ø³Ø§Ù„Ø© (Ø£ÙˆÙ„ Ø¹Ù†ØµØ± Ø¨Ø¹Ø¯ Ø§Ù„Ù€ layout)
    end
    
    scroll.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y)
    scroll.CanvasPosition = Vector2.new(0, layout.AbsoluteContentSize.Y)
end

-- Ù…Ø±Ø§Ù‚Ø¨Ø© Ø§Ù„Ø´Ø§Øª Ø¨ÙƒÙ„ Ø£Ù†ÙˆØ§Ø¹Ù‡
local function connectPlayer(p)
    p.Chatted:Connect(function(m) addLog(p.Name, m) end)
end
for _, p in pairs(Players:GetPlayers()) do connectPlayer(p) end
Players.PlayerAdded:Connect(connectPlayer)

TextChatService.MessageReceived:Connect(function(obj)
    local sender = obj.TextSource and obj.TextSource.Name or "System"
    addLog(sender, obj.TextContent, Color3.fromRGB(200, 255, 200))
end)

-- Ø²Ø± L Ù„Ù„Ø¥Ø®ÙØ§Ø¡ ÙˆØ§Ù„Ø¸Ù‡ÙˆØ±
UserInputService.InputBegan:Connect(function(input, gp)
    if not gp and input.KeyCode == Enum.KeyCode.L then
        mainFrame.Visible = not mainFrame.Visible
    end
end)

print("Logs Script Loaded Perfectly!")
